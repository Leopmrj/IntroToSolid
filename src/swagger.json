									},
									"example": {
											"id": "b2763a33-baca-4ff6-88f4-063caeb7e2c2",
											"admin": true,
											"name": "Leo",
											"email": "leo@email.com.br",
											"created_at": "2021-05-17T17:53:25.572Z",
