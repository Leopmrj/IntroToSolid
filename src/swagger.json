									}
								},
								"example": {
									"name": "user sample name",
									"email": "email sample name"
								}
							}
						}
					}
				},
				"responses":{
					"201": {
						"description": "Created",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"id": {
											"type":"string"
										},
										"name": {
											"type": "string"
										},
										"admin": {
											"type": "boolean"
